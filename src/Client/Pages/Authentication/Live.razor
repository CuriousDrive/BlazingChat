@page "/live/{TermsFeedId}"

@using Microsoft.Extensions.Configuration

@inject NavigationManager _navigationManager
@inject IConfiguration _configuration

@code {
    // 7fbb8c14-686b-46e6-918c-240b3adf04ea => privacy policy
    // 8a9ee106-4a05-4bbd-83b6-77a57020c051 => terms and services
    [Parameter] public string TermsFeedId { get; set; }

    protected override void OnInitialized()
    {
        if (_configuration.GetSection("TermsFeedIds").Get<IEnumerable<string>>().Contains(TermsFeedId))
        {
            _navigationManager.NavigateTo($"https://www.termsfeed.com/live/{TermsFeedId}");
        }
    }
}
